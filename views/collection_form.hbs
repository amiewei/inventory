<div class="page-content-container">
  <h3>{{title}}</h3>

  <form method="POST" action="">
    <label for="name" >Collection Name</label>
    <input type="text" placeholder="Powder Day 2023 Collection..." name="name" value="{{collection.name}}">
    <label for="description">Description</label>
    <input type="text" placeholder="Brief description of the collection..." name="description" value="{{collection.description}}">
    <select name="gender">
        <option value="female">Female</option>
        <option value="male">Male</option>
        <option value="unisex">Unisex</option>
    </select>
    <button class="submit">Create Collection</button>
  </form>


</div>