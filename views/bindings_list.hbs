<div class="page-content-container">
  <h3>{{title}}</h3>
    <p>{{message}}</p>
    <br>

    <div class="item-list">
    {{#if error}}
      <p>Error</p>
    {{else}}
      <a href='/bindings/add'>Add Bindings
        <span class="material-symbols-rounded">library_add</span>
      </a>
      {{#each bindings_list}}
      <div class="edit-del-btn-grp">
        <a href={{this.url}}><h3>{{inc @index}}. {{{this.name}}}</h3></a>
        <a href="{{this.url}}/update"><span class="material-symbols-rounded edit-del-btn">edit</span></a>
        <a href="{{this.url}}/delete"><span class="material-symbols-rounded edit-del-btn">delete</span></a>
      </div>
        <p>Size: {{this.size}}</p>
        <p>Inventory Stock: {{this.stock}}</p>
        <p>Price (USD): ${{this.price}}</p>
        <p>Collection: {{this.collection_name}}</p>
      {{/each}}
    {{/if}}
    </div>
</div>
